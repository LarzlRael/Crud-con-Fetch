<form class="card card-body" id="form">
    <div class="form-group">
        <input type="text" id="name" placeholder="Ingrese Nombre" class="form-control" autofocus>
    </div>
    <div class="form-group">
        <input type="text" id="especialidad" placeholder="Ingrese especialidad" class="form-control">
    </div>
    <div class="form-group">
        <textarea id="dir" cols="30" placeholder="Direccion" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="number" id="pacientes" placeholder="Ingrese numero de pacientes" class="form-control">
    </div>
    <div class="form-group">
        <input type="number" id="trabajadores" placeholder="Ingrese numero de trabajores" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">ReGistrar Datos</button>
    <br>
    <button type="reset" class="btn btn-danger">Cancelar</button>
</form>

